---
import AstroIcon from "./icons/AstroIcon.astro";
import CSSIcon from "./icons/CSSIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import NodejsIcon from "./icons/NodejsIcon.astro";

const TAGS = {
  ASTRO: {
    name: "Astro",
    class: "dark:text-white",
    icon: AstroIcon,
  },
  CSS: {
    name: "CSS",
    class: "dark:text-white",
    icon: CSSIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "dark:text-white",
    icon: JavaScriptIcon,
  },
  NODE: {
    name: "Node.js",
    class: "dark:text-white",
    icon: NodejsIcon,
  },
};

const PROJECTS = [
  {
    title: "Página Web - InfinetCloud",
    description:
      "InfinetCloud te brinda internet satelital y fibra óptica con gran estabilidad. En InfinetMac reparamos tus equipos Apple de forma profesional.",
    links: "https://www.infinetcloud.mx/",
    github: "#",
    image: "/projects/infinetcloud.webp",
    tags: [TAGS.ASTRO, TAGS.JAVASCRIPT, TAGS.CSS, TAGS.NODE],
  },
  {
    title: "Generador de Package.json – Aplicación Web",
    description:
      "Herramienta web creada para agilizar la configuración del archivo package.json en proyectos Node.js.",
    links: "#",
    github: "#",
    image: "/projects/packageGeneratorPage.webp",
    tags: [TAGS.ASTRO, TAGS.JAVASCRIPT, TAGS.CSS],
  },
];
---

{
  PROJECTS.map((project) => (
    <article class="max-w-sm">
      <img
        class="rounded shadow-2xl dark:shadow-white/10 light:shadow-black/10"
        src={project.image}
        alt={`Captura de pantalla del proyecto ${project.image}`}
      />
      <h3 class="text-2xl font-semibold dark:text-fuchsia-400 text-fuchsia-800 my-2 text-balance">
        {project.title}
      </h3>
      <p class="text-lg mb-4 text-pretty">{project.description}</p>
      <ul class="grid grid-cols-3 gap-x-4 gap-y-2 mb-4">
        {project.tags.map((tag) => (
          <li>
            <span
              class={`${tag.class} flex gap-x-2 items-center rounded-full text-xs py-1 px-2`}
            >
              <tag.icon class="size-6" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
    </article>
  ))
}
