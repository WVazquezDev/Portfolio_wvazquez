---
export interface Props {
  title: string;
  description: string;
  link: undefined;
  date: string;
}

const { title, description, date, link } = Astro.props;
---

<span
  class="calendarIcon absolute flex items-center justify-center w-6 h-6 rounded-full -start-3 ring-2 dark:ring-fuchsia-400 ring-fuchsia-800"
>
  <svg
    class="w-3 h-3 dark:text-fuchsia-400 text-fuchsia-800"
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    fill="none"
    viewBox="0 0 24 24"
    ><path
      stroke="currentColor"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M4 10h16m-8-3V4M7 7V4m10 3V4M5 20h14a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1Zm3-7h.01v.01H8V13Zm4 0h.01v.01H12V13Zm4 0h.01v.01H16V13Zm-8 4h.01v.01H8V17Zm4 0h.01v.01H12V17Zm4 0h.01v.01H16V17Z"
    ></path></svg
  >
</span>
<time
  class="bg-fuchsia-100 border dark:border-fuchsia-400 border-fuchsia-800 text-fuchsia-800 text-xs font-medium px-1.5 py-0.5 ml-3 rounded"
  >{date}</time
>
<h3
  class="dark:text-fuchsia-400 flex items-center mb-1 text-lg font-semibold text-fuchsia-800 mt-4 text-balance"
>
  {title}
</h3>
<p class="mb-4 text-base font-normal text-pretty">
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="inline-flex items-center box-border border focus:ring-4 shadow-xs font-medium leading-5 rounded-sm text-sm px-4 py-2.5 focus:outline-none"
      target="_blank"
      rel="noopener norefer"
    >
      Saber mas...
      <svg
        class="w-4 h-4 ms-1.5 -me-0.5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        fill="none"
        viewBox="0 0 24 24"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 12H5m14 0-4 4m4-4-4-4"
        />
      </svg>
    </a>
  )
}

<style>
  @media (prefers-color-scheme: dark) {
    .calendarIcon {
      background-color: #0f0f0f;
    }
  }
  @media (prefers-color-scheme: light) {
    .calendarIcon {
      background-color: #fafafa;
    }
  }
</style>
